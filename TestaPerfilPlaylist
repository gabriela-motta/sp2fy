	@Test
	public void testOrdenaAlbuns(){
		try {
			Album unitedWeAre = new Album("United We Are", "Hardwell", 2015);
			Album listen = new Album("Listen", "David Guetta", 2014);
			Album eighteenMonths = new Album("18 Months", "Calvin Harris", 2012);
			
			Perfil gabriela = new Perfil("Gabriela", unitedWeAre);
			
			gabriela.adicionaAlbum(listen);
			gabriela.adicionaAlbum(eighteenMonths);
			gabriela.adicionaAosFavoritos(listen);
			
			Perfil.ordenaAlbunsPorAno();
			
		} catch (Exception e) {
			Assert.fail();
		}

	}
}
